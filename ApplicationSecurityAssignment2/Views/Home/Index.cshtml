@model ApplicationSecurityAssignment2.Controllers.ProfileViewModel

@{
    ViewData["Title"] = "Home";
}

<h2>Welcome, @Model.FirstName @Model.LastName</h2>

<div class="card p-3" style="max-width: 720px;">
    <dl class="row">
        <dt class="col-sm-4">Email</dt>
        <dd class="col-sm-8">@Model.Email</dd>

        <dt class="col-sm-4">Mobile No</dt>
        <dd class="col-sm-8">@Model.PhoneNumber</dd>

        <dt class="col-sm-4">Billing Address</dt>
        <dd class="col-sm-8">@Model.BillingAddress</dd>

        <dt class="col-sm-4">Shipping Address</dt>
        <dd class="col-sm-8">@Model.ShippingAddress</dd>

        <dt class="col-sm-4">Credit Card No</dt>
        <dd class="col-sm-8">@Model.CreditCardNo</dd>
    </dl>

    @if (!string.IsNullOrWhiteSpace(Model.PhotoFileName))
    {
        <div class="mt-3">
            <div><strong>Photo</strong></div>
            <img src="~/uploads/@Model.PhotoFileName" alt="Profile photo"
                 style="max-width:240px; border-radius:8px;" />
        </div>
    }
</div>
